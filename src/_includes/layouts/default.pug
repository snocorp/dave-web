doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{ title } - Dave Sewell
    link(rel="icon" type="image/png" href="/images/icon.png")
    link(rel="stylesheet" href="/styles/default.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
  body
    nav.navbar.has-shadow(role="navigation" aria-label="main navigation")
      .navbar-brand
        a.navbar-item(href="/")
          img(src="/images/icon.png")
        a.navbar-burger(role="button" aria-label="menu" aria-expanded="false" data-target="mainMenu")
          span(aria-hidden="true")
          span(aria-hidden="true")
          span(aria-hidden="true")
      #mainMenu.navbar-menu
        .navbar-start
          a.navbar-item(href="/" class={"is-active": page.url === "/"}) Dave Sewell
          a.navbar-item(href="/life" class={"is-active": page.url === "/life/"}) Life
          a.navbar-item(href="/code" class={"is-active": page.url === "/code/"}) Code
          a.navbar-item(href="/work" class={"is-active": page.url === "/work/"}) Work
    section.section
      .container.block !{content}
    footer
      nav.breadcrumb.is-centered
        ul 
          li
            a(href="/life") Life
          li
            a(href="/code") Code
          li
            a(href="/work") Work
      .content.has-text-centered
        img(src="/images/mountains.png")
        .is-size-7 &copy; David Sewell 2023 (#{ page.url })
    script(src="/scripts/default.js")
